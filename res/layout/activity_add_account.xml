

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    tools:context=".LoginActivity" >

    <ScrollView 
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBF4FA"
        >    
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:paddingLeft="20dp"
                android:gravity="center_horizontal"
                android:text="Add Your Social Accounts Here !!"
                android:textSize="18sp"
                android:textColor="#348017" 
                android:textStyle="bold"/>
            
			<LinearLayout
			    android:layout_alignParentBottom="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="30dp"			    
			    android:orientation="horizontal">
	            <ImageButton
	                android:id="@+id/facebookBtn"
	                style="@style/ButtonText"
		            android:padding="10dp"		           
		            android:gravity="center_horizontal"
	                android:layout_width="109dp"
	                android:layout_height="30dp"
	                android:layout_marginLeft="20dp"
	                android:layout_weight="0.02"
	                android:background="@drawable/logo_facebook" />

	            <TextView
	                android:id="@+id/statusFacebook"
	                android:layout_width="115dp"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="20dp"
	                android:text=""
	                android:textSize="18sp" />

	            </LinearLayout>
	            
	            <LinearLayout
				    android:layout_alignParentBottom="true"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="20dp"			    
				    android:orientation="horizontal">
	
	            <Button
	                android:id="@+id/addLinkedIn_button"
	                style="@style/ButtonText"
		            android:padding="10dp"
		            android:background="@drawable/roundedbutton"
		            android:gravity="center_horizontal"
	                android:layout_width="115dp"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="20dp"
	                android:text="LinkedIn"
	                android:textSize="18sp" />
	            <TextView
	                android:id="@+id/statusLinkedIn"
	                android:layout_width="115dp"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="20dp"
	                android:text=""
	                android:textSize="18sp" />
			</LinearLayout>
			
	        <LinearLayout
				    android:layout_alignParentBottom="true"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="20dp"			    
				    android:orientation="horizontal">
	
	            <Button
	                android:id="@+id/addMyspace_button"
	                style="@style/ButtonText"
		            android:padding="10dp"
		            android:background="@drawable/roundedbutton"
		            android:gravity="center_horizontal"
	                android:layout_width="115dp"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="20dp"
	                android:text="mYspace"
	                android:textSize="18sp" />
	            <TextView
	                android:id="@+id/statusMyspace"
	                android:layout_width="115dp"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="20dp"
	                android:text=""
	                android:textSize="18sp" />
			</LinearLayout>
            <!-- create layout for navigating -->

            <LinearLayout
			    android:layout_alignParentBottom="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="40dp"			    
			    android:orientation="horizontal">

                <!-- create two buttons Back and Next here -->
                
		        May be back_button is not necessary 
		        <Button		            
		            android:id="@+id/skipBtn"
		            android:layout_width="70dp"
		            android:layout_height="40dp"
		            android:layout_gravity="left"
		            android:layout_marginLeft="40dp"
		            android:text="Skip"
		            style="@style/ButtonText"
		            android:padding="10dp"
		            android:background="@drawable/roundedbutton"
		            android:gravity="center_horizontal"
		            
		            />                

                <Button
                    android:id="@+id/nextBtn"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="100dp"
                    style="@style/ButtonText"
		            android:padding="10dp"
		            android:background="@drawable/roundedbutton"
		            android:gravity="center_horizontal"
                    android:text="Next" />
            </LinearLayout>
            
            <LinearLayout
			    android:layout_alignParentBottom="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="155dp"			    
			    android:orientation="horizontal">
                
                <Button
                    android:id="@+id/logoutBtn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    style="@style/ButtonText"
		            android:padding="5dp"
		            android:background="@drawable/roundedbutton"
		            android:gravity="center_horizontal"
                    android:text="logout facebook" 
                    android:textSize="10sp"/>
            </LinearLayout>
            
        </LinearLayout>
    
    </ScrollView>

</merge>
